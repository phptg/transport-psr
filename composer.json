{
    "name": "phptg/transport-psr",
    "type": "library",
    "description": "PSR Transport for Telegram Bot API",
    "keywords": [
        "telegram",
        "bot",
        "api",
        "psr",
        "transport"
    ],
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/phptg/transport-psr/issues?state=open",
        "source": "https://github.com/phptg/transport-psr",
        "chat": "https://t.me/predvoditelev_chat"
    },
    "authors": [
        {
            "name": "Sergei Predvoditelev",
            "homepage": "https://predvoditelev.ru"
        }
    ],
    "require": {
        "php": "8.2 - 8.5",
        "php-http/multipart-stream-builder": "^1.4.2",
        "phptg/bot-api": "^0.11.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.1",
        "psr/http-message": "^1.1 || ^2.0"
    },
    "require-dev": {
        "ext-curl": "*",
        "bamarni/composer-bin-plugin": "^1.8.3",
        "httpsoft/http-message": "^1.1.6",
        "php-http/curl-client": "^2.4.0",
        "phpunit/phpunit": "^11.5.46",
        "psr/log": "^3.0.2",
        "yiisoft/files": "^2.1",
        "yiisoft/test-support": "^3.1.0"
    },
    "autoload": {
        "psr-4": {
            "Phptg\\TransportPsr\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phptg\\TransportPsr\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-real": "phpunit --group=realApi",
        "cs-fix": "php-cs-fixer fix",
        "rector": "rector",
        "infection": "infection --threads=max",
        "dependency-analyser": "composer-dependency-analyser"
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": true,
            "target-directory": "tools",
            "forward-command": true
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "composer/package-versions-deprecated": true,
            "infection/extension-installer": true,
            "php-http/discovery": false
        }
    }
}
